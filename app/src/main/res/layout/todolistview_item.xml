<?xml version="1.0" encoding="utf-8"?>
<org.androidtown.todolist.CheckableLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:ignore="MissingPrefix"
    android:descendantFocusability="blocksDescendants">

    <com.ssomai.android.scalablelayout.ScalableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/listview_custom"
        app:scale_base_width="1080"
        app:scale_base_height="200"
        tools:ignore="MissingConstraints">

        <CheckBox
            android:id="@+id/list_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme"
            android:focusable="false"
            app:scale_top="50"
            app:scale_left="50"/>

        <TextView
            android:id="@+id/to_do_list_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="test"
            android:gravity="center_vertical"
            app:scale_width="680"
            app:scale_left="160"
            app:scale_height="100"
            app:scale_top="50"
            app:scale_textsize="47" />

        <TextView
        android:id="@+id/to_do_list_time_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="11:00 AM"
        android:textColor="#AAAAAA"
        app:scale_left="840"
        app:scale_textsize="45"
        app:scale_top="35"
        app:scale_width="220"
        app:scale_height="70" />

        <TextView
            android:id="@+id/to_do_list_d-day_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="D-10"
            android:textColor="#AAAAAA"
            app:scale_left="840"
            app:scale_textsize="45"
            app:scale_top="105"
            app:scale_width="220"
            app:scale_height="65" />

        <View
            android:id="@+id/listview_check_anim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#EAEAEA"
            app:scale_width="650"
            app:scale_height="5"
            app:scale_left="160"
            app:scale_top="100"/>

    </com.ssomai.android.scalablelayout.ScalableLayout>

</org.androidtown.todolist.CheckableLinearLayout>